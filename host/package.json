{
	"name": "host",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"android": "react-native run-android",
		"ios": "react-native run-ios",
		"start:host": "react-native webpack-start --port 8081",
		"start:app1": "yarn workspace app1 run start",
		"start:app2": "yarn workspace app2 run start",
		"start": "concurrently -P 'yarn:start:*'",
		"test": "jest",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"bundle:ios": "react-native webpack-bundle --platform ios --entry-file src/index.ts --dev=false",
		"bundle:android": "react-native webpack-bundle --platform android --entry-file index.js --dev=false",
		"webpack": "webpack -c webpack.config.mjs --env platform=ios --env mode=production",
		"start:remote": "node serve-remote-bundles.js"
	},
	"dependencies": {
		"@callstack/repack": "^3.3.1",
		"@react-native-async-storage/async-storage": "^1.17.11",
		"@react-native-masked-view/masked-view": "^0.2.9",
		"@react-navigation/drawer": "^6.6.3",
		"@react-navigation/native": "^6.1.7",
		"@react-navigation/native-stack": "^6.9.13",
		"@react-navigation/stack": "^6.3.17",
		"react": "18.1.0",
		"react-native": "^0.69.12",
		"react-native-device-info": "^10.8.0",
		"react-native-gesture-handler": "*",
		"react-native-haptic-feedback": "^2.0.3",
		"react-native-linear-gradient": "^2.6.2",
		"react-native-reanimated": "1.13.2",
		"react-native-safe-area-context": "^4.7.1",
		"react-native-screens": "^3.23.0",
		"react-native-svg": "^12.3.0",
		"recoil": "^0.7.7"
	},
	"devDependencies": {
		"@babel/core": "^7.22.9",
		"@babel/runtime": "^7.22.6",
		"@react-native-community/eslint-config": "^2.0.0",
		"@svgr/webpack": "^6.5.1",
		"@swc/core": "^1.3.24",
		"@tsconfig/react-native": "^2.0.2",
		"@types/jest": "^26.0.23",
		"@types/react": "^18.0.26",
		"@types/react-native": "^0.69.6",
		"@types/react-test-renderer": "^18.0.0",
		"babel-jest": "^26.6.3",
		"babel-loader": "*",
		"babel-plugin-module-resolver": "^4.1.0",
		"concurrently": "^8.2.0",
		"fs": "^0.0.1-security",
		"http": "^0.0.1-security",
		"jest": "^26.6.3",
		"metro-react-native-babel-preset": "0.72.3",
		"path": "^0.12.7",
		"react-test-renderer": "18.1.0",
		"swc-loader": "^0.2.3",
		"terser-webpack-plugin": "^5.3.6",
		"typescript": "^4.6.3",
		"url": "^0.11.0",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1"
	},

	"jest": {
		"preset": "react-native",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
